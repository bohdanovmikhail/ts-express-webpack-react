{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es7", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "types": ["node", "webpack-env"],
    "typeRoots": [
      "types"
    ]
  },
  "include": [
    "src",
    "node_modules/@types"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "types": [
    "typePatches"
  ]
}
